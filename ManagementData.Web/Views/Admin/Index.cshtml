@section Scripts{
    <!-- jQuery 3 -->
    <script src="~/Content/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="~/Content/adminlte/components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/adminlte/components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/Content/adminlte/components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/adminlte/components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/adminlte/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/adminlte/dist/js/demo.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            $('#example2').DataTable({

            })
            var table;
            var data;
        })
        $(document).ready(function () {
            //load data modal
            $('.btn-show-data').click(function () {
                var userId = $(this).attr('data-id');
                $('#example3 tbody').remove();
                $('#example3').DataTable().destroy();
                $('.box-title-data').html($(this).attr('data-name'));
                $('#example3').DataTable({
                    "ajax": {
                        "url": "/Data/GetData",
                        "type": "GET",
                        "data": function (d) {
                            d.userId = userId;
                        },
                        "dataType": "json",
                        "dataSrc": function (json) {
                          
                            return json.dataObject;
                        }
                    },
                    drawCallback: function (response) {
                    },
                    "columns": [
                        { "data": "Id", "name": "Id", "width": "5%" },
                        { "data": "Text", "name": "Text", "width": "80%" },
                        //{ "data": "TimeCreate", "name": "TimeCreate" },
                        {
                            "data": "Id",
                            "render": function (data, row, type) {
                                return `
                                <div class="text-center">
                                <a  class="btn btn-info text-white btn-edit" data-id="${data}"data-toggle="modal" data-target="#modal-edit"  style="cursor:pointer">
                                Edit  &nbsp;
                                </a>
                                <a  class="btn btn-danger text-white btn-delete" data-id="${data}" style="cursor:pointer">
                                Delete <i class="fas fa-trash-alt"></i> &nbsp;
                                </a>
                                </div>
                                `
                            },
                            "width": "15%"
                        }
                    ],
                    "serverSide": "true",
                    'searching': false,
                });
                table = $('#example3').DataTable();
                $(".btn-box-tool-user-minus").trigger("click");
            });
            $('.btn-create-user').click(function (e) {
                e.preventDefault();
                var model = {
                    fullname: $('#fullname_create').val(),
                    email: $('#email_create').val(),
                    password: $('#password_create').val(),
                    confirmpassword: $('#confirmpassword_create').val()
                }
                $.ajax({
                    type: "POST",
                    url: "/Account/RegisterUser",
                    data: model,
                    dataType: "json",
                    success: function (response) {
                        console.log(response.data);
                        console.log(response.data.length);
                        if (response.data.length == 0) {
                            location.reload();
                        }
                        else {
                            $('.validation-summary-valid ul').html('');
                            $.each(response.data, function (indexInArray, valueOfElement) {
                                $('.validation-summary-valid ul').append("<li>" + valueOfElement + "</li>");
                            });
                        }
                    }
                });
            });

            
            $('body').on('mouseenter', '#example3 tbody tr ', function () {
                data = table.row(this).data();
            });
            $('body').on('click', '.btn-edit', function (e) {
                e.preventDefault();
                var id = $(this).attr('data-id');
                $('#data-id-edit').val(id);
                $('.data-text-edit').html(data.Text);
            });

            $('body').on('click', '.btn-delete', function (e) {
                e.preventDefault();
                var id = $(this).attr('data-id');
                var model = {
                    id: id,
                    admin: "admin"
                };
                swal({
                    title: 'Are you sure?',
                    text: 'Once deleted, you will not be able to recover this data!',
                    icon: 'warning',
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {

                            $.ajax({
                                type: "POST",
                                url: "/Data/DeleteData",
                                data: model,
                                dataType: "json",
                                success: function (response) {
                                }
                            });
                            location.reload();
                        } else {
                            //swal('Your imaginary file is safe!');
                        }
                    });
            });
        });

    </script>
}


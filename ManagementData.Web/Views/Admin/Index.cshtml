@model IEnumerable<ManagementData.Service.ViewModel.UserViewModel>
@{
    ViewData["Title"] = "Data";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Hover Data Table</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Full Name</th>
                                    <th>Create Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Email</td>
                                        <td>@item.FullName</td>
                                        <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <button class="btn btn-default btn-show-data" data-id="@item.Id">Data</button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Email</th>
                                    <th>Full Name</th>
                                    <th>Create Date</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>

        @foreach (var item in Model)
        {
            <div class="row tab-data-@item.Id tab-data" style="display:none">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Data</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Data</th>
                                        <th>Create Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody class="body-data-@item.Id">
                                    @*@foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Email</td>
                                                <td>@item.FullName</td>
                                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <button class="btn btn-default btn-show-data" data-id="@item.Id">Data</button>
                                                </td>
                                            </tr>
                                        }*@

                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
            <!-- /.col -->
        }
        <!-- /.row -->
    </section>
    <!-- /.content -->


</div>
<!-- /.content-wrapper -->



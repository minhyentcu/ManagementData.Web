@using Microsoft.AspNet.Identity;
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            List Data
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Index</a></li>
            <li class="active">Datas </li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <input type="hidden" id="userId" value="@User.Identity.GetUserId()" />
        <input type="hidden" id="idLast" value="0" />
        <div class="row data-content-user">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Data</h3>
                        <button type="button" class="btn btn-success" style="float:right" data-toggle="modal" data-target="#modal-default">
                            Create New
                        </button>
                        @*<button type="button" class="btn btn-primary btn-export" style="float:right;margin-right:1%" >
                               Export
                            </button>*@
                        <a href="/Data/Export/?userId=@User.Identity.GetUserId()" data-windowId="@Guid.NewGuid().ToString()" class="btn btn-primary btn-export" style="float:right;margin-right:1%">Export</a>
                        <button class="btn btn-primary btn-import" style="float:right;margin-right:1%">Import</button>
                        <form method="post" action="/Data/Import" style="display:none" enctype="multipart/form-data">
                            <input id="file-import" hidden type="file" name="file" accept=".xls,.xlsx,.txt" />
                            <input id="" hidden type="text" name="userId" value="@User.Identity.GetUserId()" />
                            <button type="submit" class="btn btn-primary btn-submit-import">Submit</button>
                        </form>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-12">
                            <table id="example2" class="table table-bordered table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">STT</th>
                                        <th class="text-center">Text</th>
                                        <th class="text-center">Create Date</th>
                                        <th class="text-center">
                                            <button class="btn btn-danger btn-sm btn-delete-all">Delete</button>
                                            <button class="btn btn-sm btn-select-all btn-info" data-slect="false"> Select All</button>

                                        </th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th colspan="3" style="text-align:right">Total:</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>

        <!-- /.row -->

        <div class="modal fade" id="modal-default">
            <div class="modal-dialog ">
                <div class="modal-content " style="width:auto !important">
                    <form method="post" action="/Data/InsertData" enctype="multipart/form-data">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title">Inser Data</h4>
                        </div>
                        <div class="modal-body">
                            <textarea class="form-control" rows="10" name="Text" style="width:100%"></textarea>
                            <input type="hidden" name="userId" value="@User.Identity.GetUserId()" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <div class="modal fade" id="modal-edit">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" action="/Data/UpdateData">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title">Edit Data</h4>
                        </div>
                        <div class="modal-body">
                            <textarea class="form-control data-text-edit" rows="10" name="Text"></textarea>
                            <input type="hidden" name="id" id="data-id-edit" value="" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </section>
    <!-- /.content -->


</div>
<!-- /.content-wrapper -->



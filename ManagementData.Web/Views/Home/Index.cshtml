@section Scripts{
    <!-- jQuery 3 -->
    <script src="~/Content/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="~/Content/adminlte/components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/adminlte/components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/Content/adminlte/components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/adminlte/components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/adminlte/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/adminlte/dist/js/demo.js"></script>

    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js" defer></script> 
    <!-- page script -->
    <script>
        $(document).ready(function () {
            var idUser = $('#userId').val();
            var idLast = $('#idLast').val();
            var model = {
                userId: idUser,
                idLast: 0,
            };
            var stringData;
            var url = "/Data/GetData/?userId=" + idUser + "&idLast=" + idLast;
            $('#example2').DataTable({
                "ajax": {
                    "url": "/Data/GetData",
                    "type": "GET",
                    "data": function (d) {
                        d.userId = $('#userId').val();
                        d.idLast = $('#idLast').val();
                    },
                    "dataType": "json",
                    "dataSrc": function (json) {
                        //var api = this.api();
                        var idUser = $('#userId').val();
                        var windowId = $('btn-export').attr('data-windowId');
                        var urlExport = "/Data/Export/?userId=" + idUser + "&page=" + json.page + "&size=" + json.size + "&orderSort=" + json.orderSort + "&windowId=" + windowId;
                        $('#example2_info').html("Total records: " + json.countData);
                        stringData = $('#example2_info').html();
                        $('.btn-export').attr('href', urlExport);
                        return json.dataObject;
                    }
                },
                drawCallback: function (response) {
                    console.log(response);
                },
                footerCallback: function (row, data, start, end, display,json) {
                    console.log(data);
                    var api = this.api();
                    $(api.column(3).footer()).html(stringData);
                },
                "columns": [
                    { "data": "Stt", "name": "Stt", "width": "5%" },
                    { "data": "Text", "name": "Text", "width": "70%" },
                    { "data": "TimeString", "name": "TimeString", "width": "10%" },
                    {
                        "data": "Id",
                        "render": function (data, row, type) {
                            return `
                                         <div class="text-center">
                                        <a  class="btn btn-info text-white btn-edit" data-id="${data}"data-toggle="modal" data-target="#modal-edit"  style="cursor:pointer">
                                           Edit  &nbsp;
                                        </a>
                                        <a  class="btn btn-danger text-white btn-delete" data-id="${data}" style="cursor:pointer">
                                           Delete <i class="fas fa-trash-alt"></i> &nbsp;
                                        </a>
                                        <input type="checkbox" class="cb-delete" name="item-data" data-id="${data}" value="${data}" name="cb-delete">
                                        </div>
                                         `
                        },
                        "width": "15%"
                    }
                ],
                "serverSide": "true",
                "searching": false,
                "ordering": false,
                "recordsTotal":100,
                
            });
            $("div.toolbar").html('<b>Custom tool bar! Text/images etc.</b>');
            $('#example2_info').html('');
            var table = $('#example2').DataTable();
            var data;
            $('#example2_info').html('');
            $('#example2 tbody').on('click', 'tr', function () {
                data = table.row(this).data();
            });
            $('body').on('click', '.btn-edit', function (e) {
                e.preventDefault();
                var id = $(this).attr('data-id');
                $('#data-id-edit').val(id);
                $('.data-text-edit').html(data.Text);
            });

            $('body').on('click', '.btn-delete', function (e) {
                e.preventDefault();
                var id = $(this).attr('data-id');
                swal({
                    title: 'Are you sure?',
                    text: 'Once deleted, you will not be able to recover this data!',
                    icon: 'warning',
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {

                            $.ajax({
                                type: "POST",
                                url: "/Data/DeleteData",
                                data: "id=" + id,
                                dataType: "json",
                                success: function (response) {
                                }
                            });
                            location.reload();
                        } else {
                            //swal('Your imaginary file is safe!');
                        }
                    });
            });

            $('.btn-import').click(function (e) {
                e.preventDefault();
                $('#file-import').trigger('click');
            });

            $('#file-import').on('change', function () {
                $('.btn-submit-import').trigger('click');
            });

            $('.btn-select-all').click(function (e) {
                e.preventDefault();
                var check = $(this).attr('data-slect');
                checkboxes = $(':checkbox');
                if (check == "false") {
                    $(this).attr('data-slect', 'true');
                    checkboxes.prop('checked', true);
                }
                else {
                    $(this).attr('data-slect', 'false');
                    checkboxes.prop('checked', false);
                }
            });
            // btn delete all item

            $('body').on('click', '.btn-delete-all', function (e) {
                e.preventDefault();
                var dataItems = [];
                $.each($("input[name='item-data']:checked"), function () {
                    dataItems.push($(this).val());
                });
                var modelPost = {
                    dataItems: dataItems,
                    admin: ''
                };
                swal({
                    title: 'Are you sure?',
                    text: 'Once deleted, you will not be able to recover this data!',
                    icon: 'warning',
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            $.ajax({
                                type: "POST",
                                url: "/Data/DeleteAllData",
                                data: modelPost,
                                dataType: "json",
                                success: function (response) {
                                }
                            });
                            location.reload();
                        } else {
                            //swal('Your imaginary file is safe!');
                        }
                    });
            });
            // btn delete all item

            $('.btn-export').click(function (e) {
                //e.preventDefault();
                checkCookie();
            });
            //var table = $('#example2').DataTable();
            //setInterval(function () {
            //    table.ajax.reload();
            //    console.log("reload");
            //}, 3000);
        });
        function checkCookie() {
            var cookieVal = $.cookie($("input[name='windowid']").val());
            if (cookieVal == null || cookieVal === 'undefined') {
                setTimeout("checkCookie();", 1000);
            }
            else {
                var table = $('#example2').DataTable();
                setInterval(function () {
                    table.ajax.reload();
                    console.log("reload");
                }, 3000);
            }
        };
       
    </script>

}

